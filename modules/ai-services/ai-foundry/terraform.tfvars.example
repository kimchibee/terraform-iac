#--------------------------------------------------------------
# AI Foundry Module - terraform.tfvars 예시
# 환경별로 이 파일을 복사하여 실제 값으로 수정
#--------------------------------------------------------------

# AI Foundry 기본 설정
ai_foundry_name = "aifoundry-spoke"

# Compute Clusters (잦은 변경 예상)
compute_clusters = {
  "training-cluster" = {
    vm_size     = "Standard_NC6s_v3"
    min_nodes   = 0
    max_nodes   = 4
    vm_priority = "Dedicated"
  }
  "inference-cluster" = {
    vm_size     = "Standard_NC6s_v3"
    min_nodes   = 1
    max_nodes   = 2
    vm_priority = "Dedicated"
  }
  # 환경별로 추가/삭제 가능
  # "batch-cluster" = {
  #   vm_size     = "Standard_NC6s_v3"
  #   min_nodes   = 0
  #   max_nodes   = 8
  #   vm_priority = "LowPriority"
  # }
}

# Model Deployments (잦은 변경 예상)
model_deployments = {
  "gpt-4-model" = {
    model_name   = "gpt-4"
    version      = "latest"
    compute_type = "Managed"
    environment  = "config/environments/gpt-4-env.yml"
  }
  "llama-model" = {
    model_name   = "llama-2"
    version      = "7b"
    compute_type = "Managed"
    environment  = "config/environments/llama-env.yml"
  }
  # 환경별로 추가/삭제 가능
}

# Datasets (잦은 변경 예상)
datasets = {
  "training-data" = {
    source_type = "File"
    path        = "datasets/training/"
    description = "Training dataset for ML models"
  }
  "validation-data" = {
    source_type = "File"
    path        = "datasets/validation/"
    description = "Validation dataset"
  }
  # 환경별로 추가/삭제 가능
}

# ML Environments (잦은 변경 예상)
environments = {
  "gpt-4-env" = {
    conda_file     = "config/environments/gpt-4-env.yml"
    docker_image   = "mcr.microsoft.com/azureml/openmpi4.1.0-cuda11.1-cudnn8-ubuntu20.04"
    python_version = "3.9"
  }
  "llama-env" = {
    conda_file     = "config/environments/llama-env.yml"
    docker_image   = "mcr.microsoft.com/azureml/openmpi4.1.0-cuda11.1-cudnn8-ubuntu20.04"
    python_version = "3.8"
  }
  # 환경별로 추가/삭제 가능
}

